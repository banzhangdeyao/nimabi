<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopping_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.twkj.lovebook.activity.ShoppingCartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TopBarBgColor"
        >
        <ImageView
            android:id="@+id/activity_shopping_cart_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:background="@drawable/image_icon_back_background"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/activity_shopping_cart_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:lines="1"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/activity_shopping_cart_tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@color/appStyle"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/activity_shopping_cart_tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@color/appStyle"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:padding="10dp"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_shopping_cart_rv_shoppingcart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/activity_shopping_cart_ll_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/activity_shopping_cart_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="结算"
            android:textColor="@color/white"
            android:background="@color/appStyle"
            android:textSize="21sp"
            android:gravity="center"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_shopping_cart_ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/activity_shopping_cart_btn_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/appStyle"
            android:textSize="21sp"
            android:gravity="center"
            android:padding="10dp"
            android:text="复制"

            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_gray"

            />

        <Button
            android:id="@+id/activity_shopping_cart_btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/appStyle"
            android:textSize="21sp"
            android:gravity="center"
            android:padding="10dp"
            android:text="删除"

            />
    </LinearLayout>

</LinearLayout>
