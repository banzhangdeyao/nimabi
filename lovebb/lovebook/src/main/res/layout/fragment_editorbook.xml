<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twkj.lovebook.fragment.EditorbookFragment"
    android:orientation="vertical"
    android:background="@drawable/bg_editor"
    >
    <LinearLayout
        android:id="@+id/fragment_editorbook_ll_autoedit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_auto_edit"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动编辑"
            android:textColor="#fff"
            android:paddingTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_editorbook_ll_manualedit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="75dp"

            android:src="@drawable/btn_manual_editing"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动编辑"
            android:textColor="#fff"
            android:paddingTop="10dp"
            />
    </LinearLayout>



</LinearLayout>
