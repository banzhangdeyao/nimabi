<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- 书架fragment里xsv填充的布局 -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_app_style_line"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成的书"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            />

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_bookshelf_content_xsv_rv_upBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/fragment_bookshelf_content_xsv_ll_upBookMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_bookshelf_arrow"
            />
    </LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/fragment_bookshelf_content_xsv_tv_draft_left_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_app_style_line"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_toRightOf="@id/fragment_bookshelf_content_xsv_tv_draft_left_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="草稿"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            />
        <ImageView
            android:id="@+id/fragment_bookshelf_content_xsv_iv_draft_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_bookshelf_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_bookshelf_content_xsv_rv_draftBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/fragment_bookshelf_content_xsv_ll_draftBookMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_bookshelf_arrow"
            />
    </LinearLayout>

</LinearLayout>
