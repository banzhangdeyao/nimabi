<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.twkj.lovebook.fragment.BookshelfFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TopBarBgColor"
        >
        <ImageView
            android:id="@+id/fragment_bookshelf_iv_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_bookshelf_shopping_cart"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:background="@drawable/image_icon_back_background"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书架"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_bookshelf_help"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/fragment_bookshelf_tv_bookid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bookid"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/fragment_bookshelf_tv_zouni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zouni"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/fragment_bookshelf_tv_status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status1"
            android:padding="10dp"
            />

    </LinearLayout>

    <com.twkj.lovebook.view.XScrollView
        android:id="@+id/fragment_bookshelf_xsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.twkj.lovebook.view.XScrollView>


